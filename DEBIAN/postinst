#!
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
    if which update-icon-caches >/dev/null 2>&1 ; then
        update-icon-caches /usr/share/icons/Yaru-MATE
        
    fi
      if which update-theme-caches >/dev/null 2>&1 ; then
        update-theme-caches /usr/share/themes/Yaru-MATE usr/share/themes/Yaru-MATE-dark /usr/share/themes/Yaru-MATE-light
    fi
fi
